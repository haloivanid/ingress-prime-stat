{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "files": [
    "./src/main.ts"
  ],
  "exclude": ["node_modules", "dist",
    "test", "src/**/*.spec.ts"],
}
